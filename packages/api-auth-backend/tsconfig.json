{
  "extends": "../../tsconfig.packages.json",
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "dist",
    "declaration": true,
    "noEmit": false,
    "lib": ["esnext", "dom"],
    "isolatedModules": false,
    "paths": {
      "api-auth-backend/*": ["./src/*"]
    },
    "plugins": [
      { "transform": "typescript-transform-paths", "useRootDirs": true },
      {
        "transform": "typescript-transform-paths",
        "useRootDirs": true,
        "afterDeclarations": true
      }
    ]
  },
  "include": ["./src/**/*.ts"]
}
