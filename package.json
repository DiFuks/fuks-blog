{
  "name": "fuks",
  "version": "1.0.0",
  "description": "My blog",
  "private": true,
  "author": "Dmitry Fuks",
  "workspaces": [
    "lib/*",
    "entries/*"
  ],
  "scripts": {
    "dev": "lerna run dev --stream",
    "prod": "lerna run build --stream && yarn run typedoc && lerna run prod --stream",
    "lint": "lerna run lint --stream",
