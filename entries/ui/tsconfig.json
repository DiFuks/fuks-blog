{
  "extends": "../../tsconfig.packages.json",
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "ESNext",
    "paths": {
      "@ui/*": ["./src/*"]
    },
    "plugins": [
      {
        "transform": "@zerollup/ts-transform-paths"
      }
    ]
  },
  "include": ["**/*.ts", "**/*.tsx", "**/*.js"],
  "exclude": ["dist"]
}
