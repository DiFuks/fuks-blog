{
  "extends": "../../tsconfig.packages.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "declaration": true,
    "noEmit": false,
    "lib": ["esnext"],
    "isolatedModules": false,
    "paths": {
      "common/*": ["./src/*"]
    },
    "plugins": [
      { "transform": "typescript-transform-paths", "useRootDirs": true },
      {
        "transform": "typescript-transform-paths",
        "useRootDirs": true,
        "afterDeclarations": true
      }
    ]
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["./src/bin/generateApiContract/helpers/index.ts"]
}
