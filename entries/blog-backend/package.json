{
  "name": "@difuks/blog-backend",
  "version": "1.0.0",
  "description": "My blog backend",
  "repository": "https://github.com/DiFuks/fuks-blog",
  "author": "Dmitry Fuks",
  "license": "ISC",
  "main": "./dist/lib/index.js",
  "module": "./dist/lib/index.js",
  "types": "./dist/lib/index.d.ts",
  "scripts": {
    "build:lib": "ts-node -r tsconfig-paths/register ./src/Swagger/utils/buildShema.ts && yarn run typegen:build && yarn run lib:build",
    "build": "ttsc --project tsconfig.build.json",
    "dev": "concurrently -r \"cross-env NODE_ENV=development ts-node-dev -r tsconfig-paths/register --transpile-only ./src/main.ts\" \"yarn run lib:watch\"",
    "prod": "cross-env NODE_ENV=production node ./dist/build/main.js",
    "typegen:build": "typegen ./lib/swagger-schema.json > ./lib/client.ts",
    "typegen:watch": "nodemon --watch ./lib/swagger-schema.json --exec \"yarn run typegen:build\"",
    "lib:build": "ttsc --project tsconfig.lib.json",
    "lib:watch": "concurrently -r \"yarn run typegen:watch\" \"ttsc --watch --project tsconfig.lib.json\""
  },
  "files": [
    "dist/lib"
  ],
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "dependencies": {
    "@difuks/common": "*",
    "@nestjs/common": "^8.4.4",
    "@nestjs/core": "^8.4.4",
    "@nestjs/platform-express": "^8.4.4",
    "@nestjs/swagger": "^5.2.1",
    "axios": "^0.26.1",
    "concurrently": "^7.1.0",
    "cookie-parser": "^1.4.6",
    "cross-env": "^7.0.3",
    "dotenv-extended": "^2.9.0",
    "express": "^4.17.3",
    "lodash": "^4.17.21",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.5.5",
    "swagger-ui-express": "^4.3.0"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.13",
    "@types/lodash": "^4.14.181",
    "nodemon": "^2.0.15",
    "openapi-client-axios": "^5.1.2",
    "openapi-client-axios-typegen": "^5.0.2",
    "ts-node": "^10.7.0",
    "ts-node-dev": "^1.1.8",
    "tsconfig-paths": "^3.14.1",
    "ttypescript": "^1.5.13",
    "typescript": "^4.6.3",
    "typescript-transform-paths": "^3.3.1"
  },
  "peerDependencies": {
    "openapi-client-axios": "^5.1.2"
  }
}
