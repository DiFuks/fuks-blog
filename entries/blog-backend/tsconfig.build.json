{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist/build",
    "noEmit": false,
    "paths": {
      "blog-backend/*": ["./src/*"],
      "blog-backend-lib/*": ["./lib/*"]
    },
    "plugins": [
      { "transform": "typescript-transform-paths", "useRootDirs": true },
      {
        "transform": "typescript-transform-paths",
        "useRootDirs": true,
        "afterDeclarations": true
      }
    ]
  },
  "include": ["./src/**/*.ts"]
}
