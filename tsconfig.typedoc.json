{
  "extends": "./tsconfig.packages.json",
  "compilerOptions": {
    "paths": {
      "ui/*": ["./entries/ui/src/*"],
      "common/*": ["./entries/common/src/*"],
      "api-blog-backend/*": ["./entries/api-blog-backend/src/*"],
      "api-auth-backend/*": ["./entries/api-auth-backend/src/*"],

      "blog-frontend/*": ["./packages/blog-frontend/src/*"],
      "blog-backend/*": ["./packages/blog-backend/src/*"],
      "auth-frontend/*": ["./packages/auth-frontend/src/*"],
      "auth-backend/*": ["./packages/auth-backend/src/*"],
      "admin-frontend/*": ["./packages/admin-frontend/src/*"]
    },
    "isolatedModules": false
  },
  "exclude": ["./entries/**/*.spec.ts"]
}
